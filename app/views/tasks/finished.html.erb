<% content_for(:page_title) do -%><%= page_title_with_pagination "Finished Tasks in &ldquo;#{h truncate(@project.name)}&rdquo;", @tasks %><% end -%>
<% if @tasks.empty? -%>
<%= render :partial => 'list_actions' -%>

  <%- content_tag(:p, :class => 'first last') do %>You have no finished tasks in <%= link_to h(@project.name),
                                                                                             project_path(@project) %>. You have <%= link_to_tasks @project.tasks.finished(false).count,
                                                                                                                                                   project_tasks_path(@project),
                                                                                                                                                   :before => 'unfinished' %>.<% end %>
<% else -%>
<%= content_tag :h1, 'Finished tasks', :class => 'no-style' %>

<%= render :partial => 'list_actions' -%>

  <%- content_tag(:p, :class => 'first') do %>This is a list of your finished tasks in <%= link_to h(@project.name),
                                                                                                   project_path(@project) %>. You have <%= link_to_tasks @project.tasks.finished(false).count,
                                                                                                                                                         project_tasks_path(@project),
                                                                                                                                                         :before => 'unfinished' %>.<% end %>

<%= render :partial => 'list' %>
<% end -%>
