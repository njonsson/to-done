<% content_for(:additional_styles) do %>
  <%- content_tag(:style, :type => 'text/css') do %>
h1 {
  margin-left: 2.4em;
}

dt {
  width: 4em;
}

dd input[type="text"], dd textarea {
  width: 65%;
}

.errorExplanation {
  padding-left: 4em;
}
  <%- end %>
<% end -%>
<%= content_tag :h1, 'Properties', :class => 'no-style' %>

<% form_for(:task, :url => form_action,
                   :html => {:method => form_method}) do |form| %>
  <%- content_tag(:ul, :class => 'actions') do %>
<%= link_list_item 'Cancel', form_action, :always_link => true %>

<%= submit_list_item form, submit_button_label %>
  <%- end %>

<%= error_messages_for :task %>

  <%- content_tag(:dl) do %>
    <%- content_tag(:dt) do -%>
<%= form.label :name -%>
    <%- end %>
    <%- content_tag(:dd, :class => 'first') do -%>
<%= form.text_field :name, :class => 'autofocus',
                           :maxlength => Task.columns.detect { |c| c.name == 'name' }.limit,
                           :size => nil -%>
    <%- end %>

    <%- content_tag(:dt) do -%>
<%= form.label :notes -%>
    <%- end %>
    <%- content_tag(:dd) do -%>
<%= form.text_area :notes, :maxlength => Task.columns.detect { |c| c.name == 'notes' }.limit,
                           :rows => 4,
                           :cols => 21 -%>
    <%- end %>

    <%- content_tag(:dt) do -%>
<%= form.label :original -%>
    <%- end %>
    <%- content_tag(:dd, :class => 'last') do -%>
<%= form.check_box :original, {}, 'true', 'false' -%> <%= content_tag :i,
                                                                      '(Check this box if the task does not represent new work)' %>
    <%- end %>
  <%- end %>
<% end -%>
