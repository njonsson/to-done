<% content_for(:page_title) do -%><%= page_title_with_pagination 'Projects', @projects %><% end -%>
<% if @projects.empty? -%>
<%= render :partial => 'list_actions' -%>

  <%- content_tag(:p, :class => 'first') do %>You have no open projects. <%= link_to 'Create one', new_project_path %> now.<% end %>

  <%- content_tag(:p, :class => 'last') do %>You have <%= link_to pluralize_with_pretty_zero(Project.closed(true).count, 'closed project'), closed_projects_path %>.<% end %>
<% else -%>
<%= content_tag :h1, 'Projects', :class => 'no-style' %>

<%= render :partial => 'list_actions' -%>

  <%- content_tag(:p, :class => 'first') do %>This is a list of your open projects, sorted by name. You have <%= link_to pluralize_with_pretty_zero(Project.closed(true).count, 'closed project'), closed_projects_path %>.<% end %>

<%= render :partial => 'list' %>
<% end -%>
